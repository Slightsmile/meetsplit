rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isRoomAdmin(roomId) {
      return isSignedIn()
        && exists(/databases/$(database)/documents/rooms/$(roomId))
        && get(/databases/$(database)/documents/rooms/$(roomId)).data.adminId == request.auth.uid;
    }

    function isRoomMember(roomId) {
      return isSignedIn()
        && exists(/databases/$(database)/documents/roomMembers/$(roomId + '_' + request.auth.uid));
    }

    // --- Rooms ---
    match /rooms/{roomId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isRoomAdmin(roomId);
      allow delete: if isRoomAdmin(roomId);
    }

    // --- Room Members ---
    match /roomMembers/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn()
        && (resource.data.userId == request.auth.uid
            || isRoomAdmin(resource.data.roomId));
    }

    // --- Users ---
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
    }

    // --- Availability ---
    match /availability/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    // --- Expenses ---
    match /expenses/{expenseId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    // --- Expense Participants ---
    match /expenseParticipants/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    // --- Room Payments ---
    match /roomPayments/{docId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }
  }
}
